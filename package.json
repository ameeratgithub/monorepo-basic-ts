{
  "name": "monorepo-rnd",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:client": "pnpm --filter @repo/client dev",
    "dev:server": "pnpm --filter @repo/server dev",
    "build": "pnpm -r build",
    "build:shared": "pnpm --filter @repo/shared build",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rimraf node_modules"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.0"
  }
}
